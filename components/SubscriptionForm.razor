<EditForm Model="Model" OnValidSubmit="onSubmit" Context="formContext">
    <DataAnnotationsValidator />
    <DxFormLayout>
        <DxFormLayoutItem>
            <CustomInput label="Subscription Name" Placeholder="Enter Subscription name" @bind-Value="Model.Subs_name"
                     ValidationExpression="() => Model.Subs_name" />
        </DxFormLayoutItem>
          <DxFormLayoutItem>
            <CustomInput label="Subscription amount" Placeholder="Enter Subscription amount" @bind-Value="Model.Subs_amount"
                     ValidationExpression="() => Model.Subs_amount" />
        </DxFormLayoutItem>
         <DxFormLayoutItem>
            <CustomInput label="Subscription plan" Placeholder="Enter Subscription plan" @bind-Value="Model.Subs_plan"
                     ValidationExpression="() => Model.Subs_amount" />
        </DxFormLayoutItem>
        <DxFormLayoutItem>
            <CustomButton SaveText="Add Subs" onFormSubmit="onSubmit" CancelText="Cancel"/>
        </DxFormLayoutItem>
    </DxFormLayout>
</EditForm>



@code {
    [Parameter, EditorRequired]
    public Subscription Model { get; set; }

    [Parameter]
    public EventCallback onSubmit { get; set; }

}