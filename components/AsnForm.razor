@using System.ComponentModel.DataAnnotations

<EditForm Model="Model" Context="formContext">
    <DataAnnotationsValidator />
    <DxFormLayout aria-colcount="2" CaptionPosition="CaptionPosition.Horizontal" CssClass="Layout">
        <DxFormLayoutItem Caption="Shipment ID">
            <DxTextBox NullText="Shipment id"/>
        </DxFormLayoutItem>
        <DxFormLayoutGroup Caption="Shipment from Details">
            <DxFormLayoutItem Caption="Ship from Id">
                <DxDropDownBox />
            </DxFormLayoutItem>
            <DxFormLayoutItem></DxFormLayoutItem>
            <DxFormLayoutItem Caption="Ship from Name">
                <DxTextBox NullText="Shipment from name"/>
            </DxFormLayoutItem>
            <DxFormLayoutItem></DxFormLayoutItem>
            <DxFormLayoutItem Caption="Ship from Address">
                <DxTextBox NullText="Shipment from Address"/>
            </DxFormLayoutItem>
            <DxFormLayoutItem Caption="Ship from State">
                <DxTextBox NullText="Shipment from state"/>
            </DxFormLayoutItem>
            <DxFormLayoutItem Caption="Ship from City">
                <DxTextBox NullText="Shipment from city"/>
            </DxFormLayoutItem>
            <DxFormLayoutItem Caption="Ship from PostalCode">
                <DxTextBox NullText="Shipment from postalcode"/>
            </DxFormLayoutItem>
        </DxFormLayoutGroup>
        <DxFormLayoutGroup Caption="Shipment To Details" ShowBorder="false" CssClass="clean-grp">
            <DxFormLayoutItem Caption="Shipment To Id">
                <DxDropDownBox />
            </DxFormLayoutItem>
            <DxFormLayoutItem></DxFormLayoutItem>
            <DxFormLayoutItem Caption="Ship To Name">
                <DxTextBox  NullText="Shipment to name"/>
            </DxFormLayoutItem>
            <DxFormLayoutItem></DxFormLayoutItem>
            <DxFormLayoutItem Caption="Ship To Address">
                <DxTextBox NullText="Shipment to Address"/>
            </DxFormLayoutItem>
            <DxFormLayoutItem Caption="Ship To State">
                <DxTextBox NullText="Shipment to state"/>
            </DxFormLayoutItem>
            <DxFormLayoutItem Caption="Ship To City">
                <DxTextBox NullText="Shipment to city"/>
            </DxFormLayoutItem>
            <DxFormLayoutItem Caption="Ship To PostalCode">
                <DxTextBox NullText="Shipment to PostalCode"/>
            </DxFormLayoutItem>
        </DxFormLayoutGroup>
        <DxFormLayoutItem Caption="Shipment Date">
            <DxDateEdit T="DateTime" />
        </DxFormLayoutItem>
        <DxFormLayoutItem Caption="Expected Delivery Date">
            <DxDateEdit T="DateTime" />
        </DxFormLayoutItem>
        <DxFormLayoutItem Caption="Carrier SCAC">
            <DxTextBox NullText="Carrier SCAc"/>
        </DxFormLayoutItem>
        <DxFormLayoutItem Caption="Carrier Name">
            <DxTextBox NullText="Carrier name"/>
        </DxFormLayoutItem>
        <DxFormLayoutItem Caption="Bill of Landing Number" CaptionCssClass="size">
            <DxTextBox NullText="Bill of landing number"/>
        </DxFormLayoutItem>
        <DxFormLayoutItem>
            <DxUpload UploadUrl="api/upload" SelectButtonText="Upload ASN" ShowProgressPanel="true" MaxFileSize="5242880" />
        </DxFormLayoutItem>
        <DxFormLayoutItem>
            <DxButton Text="Save"></DxButton>
            <DxButton Text="Cancel"></DxButton>
        </DxFormLayoutItem>
    </DxFormLayout>
</EditForm>



@code {
    [Parameter, EditorRequired]
    public required ASN_sample_model Model { get; set; }
}