
<EditForm Model="Model" Context="formContext">
    <DataAnnotationsValidator />
    <DxFormLayout CaptionPosition="CaptionPosition.Horizontal">
        <DxFormLayoutGroup Caption="Shipment from Details">
            @*add custom dropbox here with id*@
            <CustomInput label="ship from name" Placeholder="shipment from name" />
            <CustomInput label="ship from address" Placeholder="shipment from Address"/>
            <CustomInput label = "ship from city" Placeholder="shipment from city"/>
            <CustomInput label = "ship from state" Placeholder="shipment from state"/>
            <CustomInput label="shipment from postalcode" Placeholder="shipment from postalcode"/>
        </DxFormLayoutGroup>
          <DxFormLayoutGroup Caption="Shipment to Details">
            @*add custom dropbox here*@
            <CustomInput label="ship to name" Placeholder="shipment to name"/>
            <CustomInput label="ship to address" Placeholder="shipment to Address"/>
            <CustomInput label = "ship to city" Placeholder="shipment to city"/>
            <CustomInput label = "ship to state" Placeholder="shipment to state"/>
            <CustomInput label="shipment to postalcode" Placeholder="shipment to postalcode"/>
        </DxFormLayoutGroup>
        <CustomButton SaveText="Save" CancelText="Cancel"/>
    </DxFormLayout>
</EditForm>



@code {
    [Parameter, EditorRequired]
    public required ASN_sample_model Model { get; set; }
}